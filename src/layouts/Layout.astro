---
import '@fontsource/orelega-one';
import '@fontsource-variable/faustina';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
:root {
    --light-beige: #F1EFEF;
    --soft-olive: #CCC8AA;
    --medium-gray: #7D7C7C;
    --dark-charcoal: #191717;
    --font-title: 'Orelega One', system-ui, serif;
    --font-text: 'Faustina Variable', system-ui, serif;
}

*{
	margin: 0;
	padding: 0;
}

*::before,
*::after {
    box-sizing: border-box;
}

html {
    line-height: 1.5;
    scroll-behavior: smooth;
    font-family: var(--font-text);
}

body {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    color: var(--dark-charcoal);
}

a, ul{
    text-decoration: none;
    list-style: none;
}

h1,h2,h3,h4,h5,h6 {
    text-wrap: balance;
    font-weight: 100;
    font-family: var(--font-title);
}

img, svg{
	height: auto;
	max-width: 100%;
}

main {
	flex-grow: 1;
    background-color: var(--light-beige);
}
</style>
