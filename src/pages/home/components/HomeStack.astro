---
import Icon from '../../../icon/Icon.astro';

interface Props {
	stack: string[];
}
const { stack = [] } = Astro.props;
---
<div class="project__stack">
	{stack.map((item) => (
		<p class="stack__item">
			<Icon iconName={item} /> {item}</p>
	))}
</div>

<style>
.project__stack {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	gap: .7rem;
	margin: .6rem 0;
}

.stack__item{
	display: inline-flex;
	align-items: center;
	gap: .2rem;
	font-size: .75rem;
	border-radius: 10px;
	padding: .10rem .7rem .08rem;
	background-color: var(--clr-primary-200);
	transition: all .29s ease;
}
</style>
